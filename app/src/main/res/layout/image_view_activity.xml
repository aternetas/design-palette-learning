<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotationY="0"
    tools:context=".activities.ImageViewActivity">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="113dp"
        android:layout_height="152dp"
        android:contentDescription="@string/a_truck_is_parked"
        android:rotationY="21"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112"
        app:srcCompat="@drawable/drivingthroughthesavanna" />

    <ImageView
        android:id="@+id/randomImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:background="@drawable/image_view2_background"
        android:contentDescription="@string/android_launcher_icon_description"
        app:layout_constraintEnd_toEndOf="@+id/imageView1"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/imageView1"
        app:layout_constraintTop_toBottomOf="@+id/imageView1"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/android_launcher_icon_description"
        app:layout_constraintEnd_toEndOf="@+id/randomImageView"
        app:layout_constraintStart_toStartOf="@+id/randomImageView"
        app:layout_constraintTop_toBottomOf="@+id/randomImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>