<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DesignPaletteLearning"
        tools:targetApi="31"
        android:name=".activities.recyclerview.App">
        <activity
            android:name=".activities.recyclerview.RecyclerViewActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.TextViewActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ImageViewActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ButtonActivity"
            android:exported="false" />
        <activity
            android:name=".activities.EditTextActivity"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.listview.ListViewActivity"
            android:exported="true"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.listview.adapters.SimpleAdapterUsage"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.listview.adapters.ArrayAdapterUsage"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".activities.listview.adapters.BaseAdapterUsage"
            android:exported="false"
            android:launchMode="singleInstance" />
    </application>

</manifest>